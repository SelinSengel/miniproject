@model IEnumerable<project1.Models.TaskModel>

@{
    ViewBag.Title = "Görev Listesi";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Görev Listesi</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 20px;
        }

        h2 {
            text-align: center;
            color: #333;
        }

        form {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        input[type="text"] {
            width: 300px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-right: 10px;
        }

        button {
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007BFF;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        .actions {
            display: flex;
            gap: 10px;
        }

        .actions form {
            margin: 0;
        }

        .no-tasks {
            text-align: center;
            font-size: 18px;
            color: #666;
        }
    </style>
</head>
<body>

    <h2>Görev Listesi</h2>

    <form method="post" action="/Task/Add">
        <input type="text" name="aciklama" placeholder="Yeni Görev..." required />
        <button type="submit">Ekle</button>
    </form>

    @if (Model == null || !Model.Any())
    {
        <p class="no-tasks">Görev bulunamadı.</p>
    }
    else
    {
        <table>
            <thead>
                <tr>
                    <th>Görev</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Aciklama</td>
                        <td>@task.Tarih.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@(task.Durum ? "Tamamlandı" : "Bekliyor")</td>
                        <td class="actions">
                            @if (!task.Durum)
                            {
                                <form method="post" action="/Task/Complete">
                                    <input type="hidden" name="id" value="@task.Id" />
                                    <button type="submit">Tamamla</button>
                                </form>
                            }

                            <form method="post" action="/Task/Delete">
                                <input type="hidden" name="id" value="@task.Id" />
                                <button type="submit">Sil</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</body>
</html>
